<%- include ('partials/header.ejs') -%>
<body>
  <h1>=[</h1>
  <div class="posts-container">
    <section class="section-removal">
      <header>
        <h2>Once you click, it's gone!</h2>
      </header>
      <div class="p-box-removal">
        <% postArr.forEach((element)=>{ %>
        <div class="p-btn">
          <p class="content"><%= element.title %>...</p>
          <form action="/remove" method="post">
            <button
              name="submitBtn"
              value="<%= element.title %>"
              class="button-removal"
              type="submit"
            >
              Remove
            </button>
          </form>
        </div>
        <% }) %>
      </div>
    </section>
  </div>
</body>
<%- include('partials/footer.ejs')-%>
